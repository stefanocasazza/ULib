# function : kill_server
kill_server() {

kill_prg userver_tcp TERM
if [ $? -ne 0 ]; then
	for i in 1 2 3 4 5; do
		pgrep userver_tcp >/dev/null 2>/dev/null
		if [ $? -ne 0 ]; then
			return
		fi
		$SLEEP
	done
fi

pkill -9    userver_tcp 2>/dev/null
pkill -9 lt-userver_tcp 2>/dev/null
}

