# function : spawn_fcgi
spawn_fcgi() {

	PRG=`basename $1`
	UNIXSOCK=tmp/fcgi.socket

   PIDS=`ps x | grep $PRG | grep -v grep | awk '{ print $1 }'`

   if [ -z "$PIDS" ]; then
      rm -f $UNIXSOCK
      spawn-fcgi -s $UNIXSOCK -S -f $1 -C 1 -P /var/run/spawn-fcgi.pid
      chmod 777 $UNIXSOCK
   fi
}

