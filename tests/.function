# function : test_output
test_output() {

	if [ "$RESULT" = "0" ] && [ "$1" = "$2" ]; then
		$SUCCESS
		kill_cmd TERM
 		exit 0
	else
		echo "RESULT = $RESULT"
		if [ "$RESULT" = "0" ]; then
			echo "N1     = $1"
			echo "N2     = $2"
		fi
		$FAILURE
		kill_cmd TERM
		exit 1
	fi
}

# function : test_output_diff
test_output_diff() {

	post_processing $1 $2 $3

	N1=`diff -bB $FILE_OUT $FILE_OK`

	test_output "$N1" ""
}

# function : test_output_wc
test_output_wc() {

	post_processing $2 $3 $4

	N1=`cat $FILE_OUT | wc -$1 2>/dev/null`
	N2=`cat $FILE_OK  | wc -$1 2>/dev/null`

	test_output "$N1" "$N2"
}

# function : TIMEOUT
TIMEOUT() {

   type timeout >/dev/null 2>&1

   if [ $? -eq 0 ]; then
      timeout "$@"
   else
      shift
      eval "$@"
   fi
}

